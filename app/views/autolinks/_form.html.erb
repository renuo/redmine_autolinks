<%= labelled_fields_for :autolink, @autolink do |f| %>
  <%= error_messages_for "autolink" %>
  <p><%= f.text_field :prefix, placeholder: t("autolinks_placeholder_prefix"),
                      maxlength: 20, required: true %></p>
  <p><%= t("autolinks_hint_prefix") %></p>
  <p><%= f.text_field :target_url, placeholder: t("autolinks_placeholder_target_url"),
                      size: 60, maxlength: 255, required: true %></p>
<% end %>
